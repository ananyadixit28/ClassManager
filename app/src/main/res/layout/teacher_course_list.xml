<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:course="http://schemas.android.com/apk/res-auto"
    xmlns:courseTeacherMainCardView="http://schemas.android.com/tools"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/courseTeacherMainCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        courseTeacherMainCardView:cardCornerRadius="@dimen/card_album_radius">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teacherCourseName"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:background="#566DEC"
                android:fontFamily="serif-monospace"
                android:gravity="center_vertical"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#111110"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/keyCourseTeacherTextView"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="#2A40B8"
                android:gravity="center_vertical"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:textColor="#000107"
                android:textIsSelectable="true"
                android:textSize="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>